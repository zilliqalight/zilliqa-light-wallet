{
  "manifest_version": 2,

  "name": "Zilliqa Light Wallet",
  "description": "Zilliqa Chrome Extension Wallet",
  "version": "0.10.0",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Zilliqa Light Wallet"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "page": "integration/background/index.html",
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "background",
    "downloads",
    "https://*.coinmarketcap.com/"
  ]
}
